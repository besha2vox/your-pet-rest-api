    "/api/notices/search/{category}": {
      "get": {
        "tags": ["Notices"],
        "summary": "Search notices by category and query",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "required": false,
            "type": "string",
            "description": "Page number for pagination. Default 1."
          },
          {
            "in": "query",
            "name": "limit",
            "required": false,
            "type": "string",
            "description": "Count of articles per page. Default 6."
          },
          {
            "in": "path",
            "name": "category",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["sell", "in-good-hands", "lost-found"]
            },
            "description": "choose category"
          },
          {
            "in": "query",
            "name": "q",
            "required": true,

            "type": "string",
            "description": "The search query"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchNoticesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body or parameters"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
