        "parameters": [
          {
            "in": "query",
            "name": "page",
            "required": false,
            "type": "string",
            "description": "Page number for pagination. Default 1."
          },
          {
            "in": "query",
            "name": "limit",
            "required": false,
            "type": "string",
            "description": "Count of articles per page. Default 6."
          },
          {
            "in": "query",
            "name": "query",
            "required": true,
            "type": "string",
            "description": "Query string",
            "example": "dog"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetNewsResponse"
